<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/idMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/Mapid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible">

            <com.mapbox.mapboxsdk.maps.MapView
                android:id="@+id/mapView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutMode="clipBounds">

            </com.mapbox.mapboxsdk.maps.MapView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnDonate"
                android:layout_width="91dp"
                android:layout_height="77dp"
                app:shapeAppearance="@mipmap/ic_launcher_donate_image_asset2"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@mipmap/ic_launcher_donate_image_asset3" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/LLayBTNS"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:gravity="bottom|clip_vertical|end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMapCountry"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#2CBFCD"
                android:backgroundTint="#B400BCD4"
                android:text="COUNTRY"
                android:textColor="@android:color/white" />


            <Button
                android:id="@+id/btnMapCity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#2CBFCD"
                android:backgroundTint="@color/btnNotClicked"
                android:text="CITY"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnMapTown"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#2CBFCD"
                android:text="TOWN"
                android:textColor="@android:color/white" />
        </LinearLayout>
